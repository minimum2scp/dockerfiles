#! /bin/sh

set -e
set -x
export DEBIAN_FRONTEND=noninteractive

##
## reset user.email for etckeeper
##
git config --global user.email "root@`hostname`"

##
## regenerate ssh host keys
##
rm -v /etc/ssh/ssh_host_*_key /etc/ssh/ssh_host_*_key.pub
dpkg-reconfigure openssh-server
etckeeper commit "openssh-server: regenerate ssh host keys"

##
## change apt-line to http.debian.net
##
sed -i -e 's/ftp\.jp\.debian\.org/http.debian.net/' /etc/apt/sources.list
etckeeper commit "apt: use http.debian.net instead of ftp.jp.debian.org"

##
## upgrade installed packages
##
apt-get update
apt-get dist-upgrade --no-install-recommends -y

