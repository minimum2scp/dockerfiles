#! /bin/sh

## environment variables
##
##   - APT_LINE                : "keep", "jp", "http://foobar.example.org/debian/"
##   - APT_UPDATE              : "yes", "true", 1 -> run apt-get update after init
##   - APT_INSTALL_PACKAGES    : "pkg1 pkg2=1.2-3 pkg3- ..."
##   - APT_INSTALL_RECOMMENDS  : "yes", "true", 1
##   - APT_INSTALL_SUGGESTS    : "yes", "true", 1
##

set -e

if [ -z "${APT_LINE}" ]; then
  APT_LINE=jp
fi

change_apt_line (){
  uri=$1
  sed -i -e "s@http://http\.debian\.net/debian/@${uri}@" /etc/apt/sources.list
  etckeeper commit "apt: use ${uri} (changed by $0)" 1>/dev/null 2>/dev/null
}

write_post_init (){
  post_init_script=/opt/init-wrapper/post-init.d/${0##*/}
  echo "#! /bin/sh"     >  ${post_init_script}

  case "${APT_UPDATE}" in
    1|true|yes) echo "apt-get update";;
    *)          echo "#apt-get update";;
  esac \
  >> ${post_init_script}

  options=
  case "${APT_INSTALL_RECOMMENDS}" in
    1|true|yes) options="$options --install-recommends";;
    *)          options="$options --no-install-recommends";;
  esac
  case "${APT_INSTALL_SUGGESTS}" in
    1|true|yes) options="$options --install-suggests";;
    *)          options="$options --no-install-suggests";;
  esac
  if [ -n "${APT_INSTALL_PACKAGES}" ]; then
    echo "apt-get install -y ${options} ${APT_INSTALL_PACKAGES}"
  else
    echo "#apt-get install -y ${options} ${APT_INSTALL_PACKAGES}"
  fi \
  >> ${post_init_script}

  echo "exit 0" \
  >> ${post_init_script}

  chmod +x ${post_init_script}
}

if [ -n "${APT_LINE}" ]; then
  case "${APT_LINE}" in
  keep)
    # do nothing (use http.debian.net)
    :
    ;;
  jp)
    change_apt_line http://ftp.jp.debian.org/debian/
    ;;
  *)
    change_apt_line "${APT_LINE}"
    ;;
  esac
fi

write_post_init

